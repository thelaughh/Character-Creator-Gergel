<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <RootNamespace>Character_Creator_Gergel</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Imgs\Dwarf\Archer.jpg" />
    <None Remove="Imgs\Dwarf\Warrior.jpg" />
    <None Remove="Imgs\Dwarf\Wizard.jpg" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Imgs\Dwarf\Archer.jpg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Imgs\Dwarf\Warrior.jpg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Imgs\Dwarf\Wizard.jpg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
