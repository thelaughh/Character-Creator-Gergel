<Window x:Class="Character_Creator_Gergel.Starter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Character_Creator_Gergel"
        mc:Ignorable="d"
        Title="Starter" Height="450" Width="800" Background="Black">
    <Grid>
        <Label Content="Character Creator" FontSize="24" Foreground="White" Margin="306,81,-306,-81" />
        <Button Content="Create" HorizontalAlignment="Center" Click="CreateCharacterButton" Height="50" Margin="0,150,0,0" VerticalAlignment="Top" Width="356" Background="Yellow" FontSize="22"/>
        <Button Content="Load Character" Click="LoadCharacter" HorizontalAlignment="Center" Height="50" Margin="0,227,0,0" VerticalAlignment="Top" Width="355" Background="Cyan" FontSize="22"/>
        <Button Content="Light" Click="Light" HorizontalAlignment="Left" Height="52" Margin="306,321,0,0" VerticalAlignment="Top" Width="94" Background="Yellow"/>
        <Button Content="Dark" Click="Dark" HorizontalAlignment="Left" Height="52" Margin="400,321,0,0" VerticalAlignment="Top" Width="94" Background="Gray"/>

    </Grid>
</Window>
